<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="demoInAppNoti.Views.AboutPage"
             xmlns:vm="clr-namespace:demoInAppNoti.ViewModels"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Button Grid.Row="1" VerticalOptions="End" Text="Show InAppNoti" Command="{Binding ShowInAppNoti}" Margin="10"/>
    </Grid>

</ContentPage>
